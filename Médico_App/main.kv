#: include login.kv
#: include pacientes.kv
#: include informacion.kv

NavigationLayout:
    id:nav_layout
    ScreenManager:
        Screen:
            
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    title:app.title
                    left_action_items:[["menu",lambda x: nav_drawer.set_state()]]
                ScreenManager:
                    id:screen_manager

                    Login:
                        id:login
                        name:'login'
                    Pacientes:
                        id:pacientes
                        name:'pacientes'

                    Informacion:
                        id:informacion
                        name:'informacion'
                
                    
    MDNavigationDrawer:
        id:nav_drawer

        BoxLayout:
            orientation:'vertical'
            padding: "8dp"
            spacing: "8dp"

            Image:
                id: imagen_medico
                size_hint: None, None
                size: "56dp", "56dp"
                #source: "kivymd.png"

            MDLabel:
                id:nombre_medico
                text: "Dr.Maria Fernandes"
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                id:correo_medico
                text: "cpp@gmail.com"
                font_style: "Caption"
                size_hint_y: None
                height: self.texture_size[1]

            ScrollView:
                MDList:
                    OneLineIconListItem:
                        text:'Pacientes'
                        on_release:
                            screen_manager.current='pacientes' 
                            nav_drawer.set_state()
                        IconLeftWidget:
                            icon:"account-group"
                    OneLineIconListItem:
                        text:'Información'
                        on_release:
                            screen_manager.current='informacion' 
                            nav_drawer.set_state()
                        IconLeftWidget:
                            icon:"information"

                    OneLineIconListItem:
                        text:'Cerrar Sesión'
                        on_release:
                            screen_manager.current='login' 
                            nav_drawer.set_state()
                            app.cerrar_sesion()

                        IconLeftWidget:
                            icon:"exit-to-app"
